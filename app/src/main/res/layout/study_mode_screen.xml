<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".HomeDestination">

    <LinearLayout
        android:id="@+id/masterLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/remainingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kumbhsans"
            android:text="Study Mode"
            android:textColor="#FFFFFF"
            android:textSize="45sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/kumbhsans"
                android:text="Duration"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/timeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#7A5FA19B"
                android:fontFamily="@font/kumbhsans"
                android:text="0 hours, 0 minutes"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <!--        <androidx.gridlayout.widget.GridLayout-->
<!--            android:id="@+id/allowedApps"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="#555555">-->

<!--        </androidx.gridlayout.widget.GridLayout>-->

        <LinearLayout
            android:id="@+id/allowedAppsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.echolauncher.DropTarget
                android:id="@+id/allowedApps"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_weight="1"/>

            <com.example.echolauncher.DropTarget
                android:id="@+id/delete"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_weight="0.25"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:srcCompat="@drawable/cross" />
            </com.example.echolauncher.DropTarget>

        </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kumbhsans"
            android:text="Start" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>